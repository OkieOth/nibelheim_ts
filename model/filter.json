{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Query Types",
    "description": "Describes a field filter with oneOf element. This is critical because union-types are not easy supported over all programming languages",
    "definitions": {
        "FieldFilter": {
            "type": "object",
            "properties": {
                "field": {
                    "type": "string"
                },
                "strFilter": {
                    "type": "object",
                    "properties": {
                        "operator": {
                            "$ref": "./query_types.json#/definitions/StringFilterOperator"
                        },
                        "values": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "numFilter": {
                    "type": "object",
                    "properties": {
                        "operator": {
                            "$ref": "./query_types.json#/definitions/NumericFilterOperator"
                        },
                        "values": {
                            "type": "array",
                            "items": {
                                "type": "number"
                            }
                        }
                    }
                },
                "dateFilter": {
                    "type": "object",
                    "properties": {
                        "operator": {
                            "$ref": "./query_types.json#/definitions/NumericFilterOperator"
                        },
                        "values": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "format": "date-time"
                            }
                        }
                    }
                },
                "booleanFilter": {
                    "type": "object",
                    "properties": {
                        "booleanOperator": {
                            "$ref": "./query_types.json#/definitions/BooleanFilterOperator"
                        },
                        "value": {
                            "type": "boolean"
                        }
                    }
                }
            }
        }
    }
}
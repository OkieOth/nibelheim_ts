{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Query Types",
    "description": "Describes a field filter with oneOf element. This is critical because union-types are not easy supported over all programming languages",
    "definitions": {
        "FieldFilter": {
            "type": "object",
            "properties": {
                "field": {
                    "type": "string"
                },
                "strFilter": {
                    "$ref": "#/definitions/StringFilter"
                },
                "numFilter": {
                    "$ref": "#/definitions/NumericFilter"
                },
                "dateFilter": {
                    "$ref": "#/definitions/DateFilter"
                },
                "boolFilter": {
                    "$ref": "#/definitions/BooleanFilter"
                }
            },
            "required": ["field"]
        },
        "StringFilter": {
            "type": "object",
            "properties": {
                "operator": {
                    "$ref": "./query_types.json#/definitions/StringFilterOperator"
                },
                "values": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": ["operator", "values"]
        },
        "NumericFilter": {
            "type": "object",
            "properties": {
                "operator": {
                    "$ref": "./query_types.json#/definitions/NumericFilterOperator"
                },
                "values": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    }
                }
            },
            "required": ["operator", "values"]
        },
        "DateFilter": {
            "type": "object",
            "properties": {
                "operator": {
                    "$ref": "./query_types.json#/definitions/NumericFilterOperator"
                },
                "values": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "required": ["operator", "values"]
        },
        "BooleanFilter": {
            "type": "object",
            "properties": {
                "operator": {
                    "$ref": "./query_types.json#/definitions/BooleanFilterOperator"
                },
                "value": {
                    "type": "boolean"
                }
            },
            "required": ["operator", "value"]
        }
    }
}
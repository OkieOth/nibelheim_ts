{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Query Types",
    "description": "Helper types to query data",
    "definitions": {
        "NumericFilterOperator": {
            "description": "EQ: ==, NE: !=, LT: <, LE: <=, GT: >, GE: <=, IB: between inclusive, EB: between exclusive, IN: in, NI: not in",
            "enum": [
                "EQ",
                "NE",
                "LT",
                "LE",
                "GT",
                "GE",
                "IB",
                "EB",
                "IN",
                "NI"
            ]
        },
        "StringFilterOperator": {
            "description": "EQ: ==, NE: !=, MA: regex match, IN: in, NI: not in",
            "enum": [
                "EQ",
                "NE",
                "MA",
                "IN",
                "NI"
            ]
        },
        "EnumFilterOperator": {
            "description": "EQ: ==, NE: !=, IN: in, NI: not in",
            "enum": [
                "EQ",
                "NE",
                "IN",
                "NI"
            ]
        },
        "UuidFilterOperator": {
            "description": "EQ: ==, NE: !=, IN: in, NI: not in",
            "enum": [
                "EQ",
                "NE",
                "IN",
                "NI"
            ]
        },
        "BooleanFilterOperator": {
            "description": "EQ: ==, NE: !=",
            "enum": [
                "EQ",
                "NE"
            ]
        },
        "SortDirection": {
            "enum": [
                "ASC",
                "DESC"
            ]
        },
        "FieldSort": {
            "type": "object",
            "properties": {
                "field": {
                    "description": "field used for sorting",
                    "type": "string"
                },
                "direction": {
                    "$ref": "#/definitions/SortDirection"
                }
            },
            "required": ["field", "direction"]
        }
    }
}